{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@constants": ["src/constants/index.ts"],
      "@types": ["src/types/index.ts"],
      "@path": ["src/constants/path.ts"],
      "@hooks/*": ["src/hooks/*"],
      "@api": ["src/api/index.ts"],
      "@utils": ["src/utils/index.ts"],
      "@store": ["src/store"],
      "@slice/*": ["src/store/rootReducer/*"],
      "@slices": ["src/store/rootReducer/searchSlice.ts"],
      "@reactQuery/*": ["src/reactQuery/*"],
      "@error/*": ["src/error/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../../PREF/b-s-we-ding/src/components/common/LoadingSpinners.tsx"],
  "exclude": ["node_modules"]
}
